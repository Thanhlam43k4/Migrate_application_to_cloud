<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product View UET Website</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="stylesheets/productView.css">
</head>

<body>
  <div class="header">
    <div class="header-content">
      <div class="logo">
        <a href="/homePage">
          <img src="/images/logo.svg"
            alt="University Icon" class="university-icon">
        </a>
      </div>
      <h1>Shopping University of electronic and technology</h1>
      <div class="links">
        <a href="/homePage">Trang chủ</a>
        <a href="/logout">Đăng xuất</a>
        <a href="/addproduct">Thêm sản phẩm</a>
        <% if (error) { %>
          <p class="error-message" style="color: red;"><%= error %></p>
        <% } %>
      </div>
    </div>
  </div>

  <div class="banner">
    <img src="https://via.placeholder.com/1200x300" alt="Banner Image" class="banner-img">
  </div>

  <div class="container mt-5">
    <div class="product-list">
      <% if(products && products.length> 0) { %>
        <% products.forEach(product=> { %>
          <div class="product-item">
            <img src="https://placehold.co/600x400" alt="<%= product.name %>" class="product-img">
            <div class="product-details">
              <p><strong>Name:</strong> <%= product.name %></p>
              <p><strong>Type:</strong> <%= product.type %></p>
              <p><strong>Remaining Amount:</strong> <%= product.amount %></p>
              <div class="actions">
                <!-- Add to Cart form -->
                <form action="/add-to-cart/<%= product.id %>" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                  </button>
                </form>
                <!-- Remove button (optional) -->
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="no-products-message">No products available.</p>
      <% } %>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
